{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "es5",
    "module":"es2015",
    "lib": ["es2015", "es2016", "es2017", "dom"],
    "sourceMap": true,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declarationDir": "types",
    "outDir": "lib/js",
    "typeRoots": [
      "node_modules/@types"
    ],
    "jsx": "react"
  },
  "include": [
    "source", "type.d.ts"
  ]
}